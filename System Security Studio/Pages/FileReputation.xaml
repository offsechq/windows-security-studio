<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HardenSystemSecurity.Pages.FileReputation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    FlowDirection="{x:Bind ViewModel.AppSettings.ApplicationGlobalFlowDirection, Mode=OneWay}">

    <Page.Resources>
        <Style x:Key="ResultValueTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ResultCopyButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Page.Resources>

    <Grid AllowDrop="{x:Bind ViewModel.IsNotElevated}"
          DragOver="{x:Bind ViewModel.OnDragOver}"
          Drop="{x:Bind ViewModel.OnDrop}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <customUI:InfoBarV2 Grid.Row="0"
                         IsOpen="{x:Bind ViewModel.MainInfoBarIsOpen, Mode=TwoWay}"
                         Message="{x:Bind ViewModel.MainInfoBarMessage, Mode=OneWay}"
                         Severity="{x:Bind ViewModel.MainInfoBarSeverity, Mode=OneWay}"
                         IsClosable="{x:Bind ViewModel.MainInfoBarIsClosable, Mode=OneWay}" />

        <Border Grid.Row="1"
                Margin="0,5,0,5"
                Padding="12"
                Style="{StaticResource GridCardStyle}">
            <StackPanel Spacing="10">
                <controls:WrapPanel Orientation="Horizontal"
                                    HorizontalSpacing="10"
                                    VerticalSpacing="10"
                                    VerticalAlignment="Center">
                    <ProgressRing Visibility="{x:Bind ViewModel.ProgressBarVisibility,Mode=OneWay}"
                                  VerticalAlignment="Center"
                                  IsIndeterminate="True" />

                    <Button x:Uid="GenericBrowseButton"
                            VerticalAlignment="Center"
                            IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                            Click="{x:Bind ViewModel.BrowseForFile}">
                        <Button.ContentTemplate>
                            <DataTemplate x:DataType="x:String">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xEC50;" FontSize="16"/>
                                    <TextBlock Text="{x:Bind}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </controls:WrapPanel>

                <TextBlock x:Uid="DragAndDropHintFileReputation"
                           Visibility="{x:Bind ViewModel.IsNotElevated}"
                           Opacity="0.7"
                           FontStyle="Italic"
                           TextWrapping="WrapWholeWords" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2"
                      Margin="20,5,20,10"
                      HorizontalScrollMode="Disabled"
                      VerticalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel Spacing="12" MaxWidth="760" HorizontalAlignment="Stretch">
                <Border Style="{StaticResource GridCardStyle}"
                        Padding="16"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Selected File"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8" />
                        <TextBox Grid.Row="1"
                                 Style="{StaticResource ResultValueTextBoxStyle}"
                                 Text="{x:Bind ViewModel.SelectedFilePath, Mode=OneWay}" />
                    </Grid>
                </Border>

                <Border Style="{StaticResource GridCardStyle}"
                        Padding="16"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   x:Uid="ReputationText"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 Style="{StaticResource ResultValueTextBoxStyle}"
                                 Text="{x:Bind ViewModel.ReputationText, Mode=OneWay}"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopyReputationToClipboard}"
                                Style="{StaticResource ResultCopyButtonStyle}">
                            <FontIcon Glyph="&#xE8C8;" />
                        </Button>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GridCardStyle}"
                        Padding="16"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   x:Uid="SourceText"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 Style="{StaticResource ResultValueTextBoxStyle}"
                                 Text="{x:Bind ViewModel.SourceText, Mode=OneWay}"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopySourceToClipboard}"
                                Style="{StaticResource ResultCopyButtonStyle}">
                            <FontIcon Glyph="&#xE8C8;" />
                        </Button>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GridCardStyle}"
                        Padding="16"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   x:Uid="DurationText"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 Style="{StaticResource ResultValueTextBoxStyle}"
                                 Text="{x:Bind ViewModel.DurationText, Mode=OneWay}"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopyDurationToClipboard}"
                                Style="{StaticResource ResultCopyButtonStyle}">
                            <FontIcon Glyph="&#xE8C8;" />
                        </Button>
                    </Grid>
                </Border>

                <Border Style="{StaticResource GridCardStyle}"
                        Padding="16"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Text="Handle"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 Style="{StaticResource ResultValueTextBoxStyle}"
                                 Text="{x:Bind ViewModel.HandleText, Mode=OneWay}"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopyHandleToClipboard}"
                                Style="{StaticResource ResultCopyButtonStyle}">
                            <FontIcon Glyph="&#xE8C8;" />
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
