<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HardenSystemSecurity.Pages.Protects.CountryIPBlocking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:HardenSystemSecurity.ViewModels"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    FlowDirection="{x:Bind ViewModel.AppSettings.ApplicationGlobalFlowDirection, Mode=OneWay}">

    <Page.Resources>
        <!-- Custom DataTemplate for ComboBox Items showing targeted lists -->
        <DataTemplate x:Key="ComboBoxItemTemplate" x:DataType="vm:ComboBoxItemModelForCountryIPBlocking">
            <StackPanel Orientation="Vertical" Margin="8" MinWidth="250">
                <TextBlock Text="{x:Bind Title}"
                           FontWeight="SemiBold"
                           TextWrapping="WrapWholeWords"
                           Margin="0,0,0,8"/>
                <HyperlinkButton x:Uid="LearnMoreHyperLinkButton"
                                 NavigateUri="{x:Bind LearnMoreUrl}"
                                 FontSize="12"
                                 Padding="4"
                                 HorizontalAlignment="Left"/>
            </StackPanel>
        </DataTemplate>

        <!-- Custom DataTemplate for individual countries ComboBox Items -->
        <DataTemplate x:Key="CountryComboBoxItemTemplate" x:DataType="vm:CountryData">
            <StackPanel Orientation="Vertical" Margin="8" MinWidth="300">
                <TextBlock Text="{x:Bind FriendlyName}"
                           FontWeight="SemiBold"
                           TextWrapping="WrapWholeWords"
                           Margin="0,0,0,4"/>
                <TextBlock Text="{x:Bind Alpha2Code}"
                           FontSize="11"
                           Opacity="0.8"
                           TextWrapping="WrapWholeWords"
                           Margin="0,0,0,8"/>

                <!-- IPv4 and IPv6 hyperlink buttons -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <HyperlinkButton Content="IPv4 Source"
                                     NavigateUri="{x:Bind IPv4Link}"
                                     FontSize="10"
                                     Padding="4"
                                     HorizontalAlignment="Left"/>
                    <HyperlinkButton Content="IPv6 Source"
                                     NavigateUri="{x:Bind IPv6Link}"
                                     FontSize="10"
                                     Padding="4"
                                     HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer>

        <Grid Margin="8,0,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <customUI:InfoBarV2 Grid.Row="0"
                    IsOpen="{x:Bind ViewModel.MainInfoBarIsOpen, Mode=TwoWay}"
                    Message="{x:Bind ViewModel.MainInfoBarMessage, Mode=OneWay}"
                    Severity="{x:Bind ViewModel.MainInfoBarSeverity, Mode=OneWay}"
                    IsClosable="{x:Bind ViewModel.MainInfoBarIsClosable, Mode=OneWay}" />

            <ProgressBar Grid.Row="1"
                         IsIndeterminate="True"
                         Visibility="{x:Bind ViewModel.ProgressBarVisibility, Mode=OneWay}"
                         Margin="0,8,0,8"/>

            <Border Grid.Row="2"
                    CornerRadius="12"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Margin="0,8,0,8">
                <StackPanel>

                    <TextBlock HorizontalAlignment="Left" x:Uid="TargetedListsText" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock x:Uid="TargetedListsDescriptionText" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,8,0,0" HorizontalAlignment="Left"/>
                    <HyperlinkButton FontSize="12" Padding="4" NavigateUri="https://github.com/HotCakeX/Official-IANA-IP-blocks" x:Uid="LearnMoreHyperLinkButton" HorizontalAlignment="Left" Margin="0,8,0,12" />

                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox VerticalAlignment="Top"
                              Grid.Column="0"
                              MinWidth="220"
                              MaxWidth="640"
                              IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                              SelectedIndex="{x:Bind ViewModel.TargetedListSelectedIndex, Mode=TwoWay}"
                              ItemTemplate="{StaticResource ComboBoxItemTemplate}"
                              ItemsSource="{x:Bind ViewModel.TargetedLists, Mode=OneWay}"/>

                        <StackPanel Grid.Column="1"
                               Orientation="Vertical"
                               Spacing="8"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left">

                            <Button x:Uid="AddCountryFirewallRulesButton"
                                Click="{x:Bind ViewModel.TargetedListAdd}"
                                MinWidth="120"
                                IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}">
                                <Button.ContentTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                            <TextBlock Text="{x:Bind}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button x:Uid="RemoveCountryFirewallRulesButton"
                                Click="{x:Bind ViewModel.TargetedListRemove}"
                                MinWidth="120"
                                IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}">
                                <Button.ContentTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE738;" FontSize="16"/>
                                            <TextBlock Text="{x:Bind}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="3"
                    CornerRadius="12"
                    Padding="16"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    HorizontalAlignment="Stretch"
                    Margin="0,8,0,8">
                <StackPanel>

                    <TextBlock HorizontalAlignment="Left" x:Uid="IndividualCountryIPBlockingText" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock x:Uid="IndividualCountryIPBlockingDescriptionText" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" Margin="0,8,0,0" />
                    <HyperlinkButton FontSize="12" Padding="4" NavigateUri="https://github.com/HotCakeX/Official-IANA-IP-blocks" x:Uid="LearnMoreHyperLinkButton" Margin="0,8,0,12"  HorizontalAlignment="Left"/>

                    <Grid HorizontalAlignment="Stretch" ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Country selection with search -->
                        <StackPanel Grid.Column="0"
                               VerticalAlignment="Top"
                               Margin="0">

                            <!-- Search box for countries -->
                            <TextBox x:Uid="SearchCountriesTextBox"
                                     Text="{x:Bind ViewModel.CountrySearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                                     MinWidth="220"
                                     MaxWidth="640"
                                     Margin="0,0,0,8"/>

                            <!-- Countries ComboBox -->
                            <ComboBox VerticalAlignment="Top"
                                 MinWidth="220"
                                 MaxWidth="640"
                                 IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                                 SelectedIndex="{x:Bind ViewModel.CountrySelectedIndex, Mode=TwoWay}"
                                 ItemTemplate="{StaticResource CountryComboBoxItemTemplate}"
                                 ItemsSource="{x:Bind ViewModel.CountryLists, Mode=OneWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    Spacing="8"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left">

                            <Button x:Uid="AddCountryFirewallRulesButton"
                                    MinWidth="120"
                                    Click="{x:Bind ViewModel.CountryAdd}"
                                    IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}">
                                <Button.ContentTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                            <TextBlock Text="{x:Bind}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button x:Uid="RemoveCountryFirewallRulesButton"
                                    MinWidth="120"
                                    Click="{x:Bind ViewModel.CountryRemove}"
                                    IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}">
                                <Button.ContentTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE738;" FontSize="16"/>
                                            <TextBlock Text="{x:Bind}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
