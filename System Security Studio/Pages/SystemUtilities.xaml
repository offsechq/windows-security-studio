<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HardenSystemSecurity.Pages.SystemUtilities"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    FlowDirection="{x:Bind ViewModel.AppSettings.ApplicationGlobalFlowDirection, Mode=OneWay}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- InfoBar -->
        <customUI:InfoBarV2 Grid.Row="0"
                            IsOpen="{x:Bind ViewModel.MainInfoBarIsOpen, Mode=TwoWay}"
                            Message="{x:Bind ViewModel.MainInfoBarMessage, Mode=OneWay}"
                            Severity="{x:Bind ViewModel.MainInfoBarSeverity, Mode=OneWay}"
                            IsClosable="{x:Bind ViewModel.MainInfoBarIsClosable, Mode=OneWay}" />

        <!-- Toolbar with action buttons -->
        <Border Grid.Row="1" Margin="0,5,0,5" Style="{StaticResource GridCardStyle}" Padding="8">
            <controls:WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalSpacing="10"
                                VerticalSpacing="10">

                <!-- Optimize Memory Button -->
                <Button x:Uid="OptimizeMemoryButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.OptimizeMemoryButtonIsEnabled, Mode=OneWay}"
                        Click="{x:Bind ViewModel.OptimizeMemory}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEEA0;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <!-- Configure Nested Virtualization for VMs DropDownButton -->
                <DropDownButton x:Uid="ConfigureHyperVMNestedVirtualizationButton"
                                VerticalAlignment="Center"
                                IsEnabled="{x:Bind ViewModel.IsHyperVNestedVirtualizationButtonEnabled, Mode=OneWay}">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:Uid="EnableHyperVMNestedVirtualizationMenuFlyoutItem"
                                            Click="{x:Bind ViewModel.EnableNestedVirtualizationForVMs}"/>
                            <MenuFlyoutItem x:Uid="DisableHyperVMNestedVirtualizationMenuFlyoutItem"
                                            Click="{x:Bind ViewModel.DisableNestedVirtualizationForVMs}"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                    <DropDownButton.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEEA3;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DropDownButton.ContentTemplate>
                </DropDownButton>

                <!-- Ultimate Performance Power Plan DropDownButton -->
                <DropDownButton x:Uid="ConfigureUltimatePerformancePowerPlanButton"
                                VerticalAlignment="Center"
                                IsEnabled="{x:Bind ViewModel.IsPowerPlanConfigButtonEnabled, Mode=OneWay}">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:Uid="EnableUltimatePerformancePowerPlanMenuFlyoutItem"
                                            Click="{x:Bind ViewModel.EnableUltimatePerformancePowerPlan}"/>
                            <MenuFlyoutItem x:Uid="DisableUltimatePerformancePowerPlanMenuFlyoutItem"
                                            Click="{x:Bind ViewModel.DisableUltimatePerformancePowerPlan}"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                    <DropDownButton.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEC49;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DropDownButton.ContentTemplate>
                </DropDownButton>

                <!-- Microsoft Store Update Check Button -->
                <Button x:Uid="MicrosoftStoreAppUpdatesCheckButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.IsCheckForAllAppUpdatesButtonEnabled, Mode=OneWay}"
                        Click="{x:Bind ViewModel.CheckForAllAppUpdates}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE895;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

            </controls:WrapPanel>
        </Border>

    </Grid>

</Page>
